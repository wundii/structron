{
  "name": "wundii/structron",
  "description": "A PHP library for generating human-readable documentation from structured data objects like DTOs, Entities, and Value Objects.",
  "keywords": [
    "documentation",
    "doc generator",
    "phpdoc",
    "dto",
    "entity",
    "value object",
    "reflection",
    "code generator",
    "markdown",
    "doc tool",
    "php"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Andreas Wunderwald",
      "email": "wundii@gmail.com"
    }
  ],
  "bin": [
    "bin/structron"
  ],
  "require": {
    "php": ">=8.2",
    "ext-json": "*",
    "symfony/config": "^6.4 || ^7.4 || ^8.0",
    "symfony/console": "^6.4 || ^7.4 || ^8.0",
    "symfony/dependency-injection": "^6.4 || ^7.4 || ^8.0",
    "symfony/finder": "^6.4 || ^7.4 || ^8.0",
    "webmozart/assert": "^1.12",
    "wundii/data-mapper": "^1.4.11"
  },
  "require-dev": {
    "phpstan/phpstan": "2.1.33",
    "phpstan/phpstan-strict-rules": "2.0.7",
    "phpunit/phpunit": "11.5.44",
    "rector/rector": "2.3.0",
    "symfony/var-dumper": "7.4.0 || 8.0.0",
    "symplify/easy-coding-standard": "13.0.0",
    "wundii/phplint": "0.3.3"
  },
  "autoload": {
    "psr-4": {
      "Wundii\\Structron\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wundii\\Structron\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "auto-scripts": {
    },
    "post-install-cmd": [
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ],
    "complete-check": [
      "@cache-clear",
      "@phplint",
      "@rector-dry",
      "@phpstan",
      "@ecs-dry",
      "@unittest"
    ],
    "rector-dry": [
      "php vendor/bin/rector process --dry-run --ansi"
    ],
    "rector-apply": [
      "php vendor/bin/rector process --ansi"
    ],
    "ecs-dry": [
      "php vendor/bin/ecs check"
    ],
    "ecs-apply": [
      "php vendor/bin/ecs check --fix"
    ],
    "phpstan": [
      "php vendor/bin/phpstan analyse"
    ],
    "unittest": [
      "php vendor/bin/phpunit --configuration phpunit.xml"
    ],
    "structron": [
      "php bin/structron"
    ],
    "phplint": [
      "php vendor/bin/phplint"
    ],
    "cache-clear": [
      "rm -R ./cache/* -f"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
